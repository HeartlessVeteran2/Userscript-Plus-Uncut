{
  "manifest_version": 3,
  "default_locale": "en",
  "name": "__MSG_extName__",
  "description": "__MSG_extShortDesc__",
  "short_name": "userJSPlus",
  "background": {
    "service_worker": "/js/background.js",
    "type": "module"
  },
  "action": {
    "default_icon": {
      "16": "img/icon_16.png",
      "32": "img/icon_32.png",
      "48": "img/icon_48.png",
      "64": "img/icon_64.png",
      "128": "img/icon_128.png"
    },
    "default_popup": "popup.html",
    "default_title": "Magic UserJS+"
  },
  "minimum_chrome_version": "122.0",
  "options_page": "popup.html?mujs=settings",
  "permissions": [
    "storage",
    "unlimitedStorage",
    "tabs",
    "activeTab",
    "webRequest"
  ],
  "host_permissions": [
    "https://*/*"
  ],
  "icons": {
    "16": "img/icon_16.png",
    "32": "img/icon_32.png",
    "48": "img/icon_48.png",
    "64": "img/icon_64.png",
    "128": "img/icon_128.png"
  }
}
