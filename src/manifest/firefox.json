{
  "manifest_version": 3,
  "default_locale": "en",
  "name": "__MSG_extName__",
  "description": "__MSG_extShortDesc__",
  "short_name": "userJSPlus",
  "background": {
    "scripts": [
      "/js/background.js"
    ],
    "type": "module"
  },
  "action": {
    "default_area": "navbar",
    "default_icon": {
      "16": "img/icon_16.png",
      "32": "img/icon_32.png",
      "48": "img/icon_48.png",
      "64": "img/icon_64.png",
      "128": "img/icon_128.png"
    },
    "default_popup": "popup.html",
    "default_title": "Magic UserJS+"
  },
  "browser_specific_settings": {
    "gecko": {
      "id": "uscriptplus@mol.com",
      "strict_min_version": "128.0"
    },
    "gecko_android": {
      "strict_min_version": "128.0"
    }
  },
  "options_ui": {
    "open_in_tab": true,
    "page": "popup.html?mujs=settings"
  },
  "permissions": [
    "storage",
    "unlimitedStorage",
    "tabs",
    "activeTab",
    "webRequest"
  ],
  "host_permissions": [
    "https://*/*"
  ],
  "content_security_policy": {
    "extension_pages": "script-src 'self'; object-src 'self'"
  },
  "icons": {
    "16": "img/icon_16.png",
    "32": "img/icon_32.png",
    "48": "img/icon_48.png",
    "64": "img/icon_64.png",
    "128": "img/icon_128.png"
  }
}
